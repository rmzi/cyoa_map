  <body>

    <div class="container">

      <form class="form-signin" role="form" id="signup" action="/api/users" method="post">
        
        <h2 class="form-signin-heading">Signup for Choose Your Own Adventure</h2>
        <label for="inputName">Name</label>
        <input type="text" id="inputName" name="name" class="form-control" placeholder="John Smith" required="" autofocus="">
        <label for="inputEmail">Email address</label>
        <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email address" required="" autofocus="">
        <label for="inputPassword">Password</label>
        <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required="">
        <label for="inputGender">Gender</label>
        <input type="text" id="inputGender" name="sex" class="form-control" placeholder="M/F/O" required="">
        <br>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Signup</button>

      </form>

    </div> <!-- /container -->
	
